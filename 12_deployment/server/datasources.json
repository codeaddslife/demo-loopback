{
  "reservationDS": {
    "name": "reservationDS",
    "localStorage": "",
    "file": "db.json",
    "connector": "memory"
  },
  "emailDS": {
    "name": "emailDS",
    "connector": "mail",
    "transports": [
      {
        "type": "SMTP",
        "host": "smtp.gmail.com",
        "secure": true,
        "port": 465,
        "auth": {
          "user": "YOUR_USER",
          "pass": "YOUR_PASSWORD"
        }
      }
    ]
  },
  "photos": {
    "name": "photos",
    "connector": "loopback-component-storage",
    "provider": "filesystem",
    "root": "./server/files"
  }
}
